{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="registerFormContainer">
        <div class="registerForm">
            <h1 class="mb-4">Inscription</h1>
            {{ form_start(registrationForm, {'attr': {'class': 'g-3 d-flex align-items-center justify-content-center flex-column'}}) }}
            <div class="mb-3">
                <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ registrationForm.plainPassword.first.vars.id }}" class="form-label">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="{{ registrationForm.plainPassword.second.vars.id }}" class="form-label">Confirmez le mot de passe</label>
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ registrationForm.first_name.vars.id }}" class="form-label">Prénom</label>
                {{ form_widget(registrationForm.first_name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ registrationForm.last_name.vars.id }}" class="form-label">Nom</label>
                {{ form_widget(registrationForm.last_name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                <label for="{{ registrationForm.phone.vars.id }}" class="form-label">Téléphone</label>
                {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">J'accepte les conditions</label>
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
	<div>
	
	</div>

{% endblock %}