{% extends 'base.html.twig' %}

{% block title %}Trajets{% endblock %}

{% block body %}
	<div class="addformbg-container-ride d-flex align-items-center justify-content-center">
		<div class="col-md-6 addformbg-ride">
			<form method="POST">
				{{ form_start(editRideForm) }}
				<h1 class="mb-4 text-center">Trajets</h1>
				<input type="hidden" name="ride_id" value="{{ rides.id }}">

				<div class="mb-3">
					{{ form_label(editRideForm.depart, 'Départ') }}
					{{ form_widget(editRideForm.depart, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(editRideForm.depart) }}
				</div>

				<div class="mb-3">
					{{ form_label(editRideForm.destination, 'Destination') }}
					{{ form_widget(editRideForm.destination, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(editRideForm.destination) }}
				</div>

				<div class="mb-3">
					{{ form_label(editRideForm.seats, 'Nombre de sièges') }}
					{{ form_widget(editRideForm.seats, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(editRideForm.seats) }}
				</div>

				<div class="mb-3">
					{{ form_label(editRideForm.price, 'Prix') }}
					{{ form_widget(editRideForm.price, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(editRideForm.price) }}
				</div>

				<div class="mb-3">
					{{ form_label(editRideForm.date, 'Date') }}
					{{ form_widget(editRideForm.date, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(editRideForm.date) }}
				</div>

				<div class="mb-3">
					{{ form_label(editRideForm.rules, 'Règles') }}
					{{ form_widget(editRideForm.rules) }}
					{{ form_errors(editRideForm.rules) }}
				</div>


				{{ form_rest(editRideForm) }}
				<div class="text-center">
					<button type="submit" class="btn btn-success">Valider</button>
				</div>

				{{ form_end(editRideForm) }}
			</form>
		</div>
	</div>
{% endblock %}
