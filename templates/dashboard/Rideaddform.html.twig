{% extends 'base.html.twig' %}

{% block pageTitle %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <div class="addformbg-container-ride d-flex align-items-center justify-content-center">
        <div class="col-md-6 addformbg-ride">
            <form action="{{ path('app_add_ride') }}" method="POST">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.depart) }}
                    {{ form_widget(form.depart, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.depart) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.destination) }}
                    {{ form_widget(form.destination, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.destination) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.seats) }}
                    {{ form_widget(form.seats, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.seats) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.price) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.rules) }}
                    {{ form_widget(form.rules) }}
                    {{ form_errors(form.rules) }}
                </div>

                {{ form_rest(form) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
