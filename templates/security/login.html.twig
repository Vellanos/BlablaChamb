{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="loginFormContainer">
		<div class="g-3 d-flex align-items-center justify-content-center flex-column">
			<form class="loginForm" method="post">
				<h1 class="mb-4">Connexion</h1>
				{% if error %}
					<div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="mb-3">
				<input class="form-control" type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div class="mb-3">
				<input class="form-control" type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>
				<div class="mb-3">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
				<button class="btn btn-primary" type="submit">
					Se connecter
				</button>
			</form>
		</div>
	</div>
{% endblock %}
