{% extends 'base.html.twig' %}

{% block title %}Trajets
{% endblock %}

{% block body %}
	<style>
		body,
		html {
			height: 100%;
		}
		.trajetContainer {
			height: 100%;
			display: flex;
		}
	
		
	</style>

	<div class='trajetContainer d-flex align-items-center justify-content-center flex-column'>
		{% for ride in rides %}
			<a href="{{ path('app_trajets_details', {'Id': ride.id}) }}">
				<div class='cardContainer d-flex flex-column justify-content-center align-items-center' style="padding:20px 0;">
					<div class="card">
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-center">
								<h5 class="card-title">{{ ride.depart }}</h5>
								<img class="arrow" src="{{ asset('img/icons8-flèche-24.png') }}" alt="Photo de profile">
								<h5 class="card-title">{{ ride.destination }}</h5>
							</div>
						</div>
						<div class="d-flex justify-content-between align-items-center">
							<h6 class="card-subtitle mb-2 text-body-secondary">Le
								{{ ride.date|date('m-d') }}
								à
								{{ ride.date|date('H:i') }}</h6>
							<h6 class="card-subtitle mb-2 text-body-secondary">{{ ride.seats }}
								places</h6>
						</div>
						<div class="d-flex justify-content-between align-items-center">
							<div class="profil d-flex align-items-center">
								<img class="profil-pic" src="{{ asset('img/icons8-utilisateur-sexe-neutre-64.png') }}" alt="Photo de profile">
								<p class="card-text">{{ ride.driver.firstName }}</p>
							</div>
							<div class="price">
								<p class="card-date">{{ ride.price }}€</p>
							</div>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>

{% endblock %}
